{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

{
  "name": "journaly-backend",
  "version": "1.0.0",
  "description": "The backend of Journaly.",
  "repository": {
    "type": "git",
    "url": "git://github.com/Journaly/journaly.git"
  },
  "author": "Journaly",
  "license": "ISC",
  "scripts": {
    "format": "npx prettier --write './**/*.{ts,js,md}'",
    "dev": "nexus dev",
    "build": "nexus build",
    "prisma": "prisma",
    "start": "node node_modules/.build",
    "seed": "ts-node seed.ts",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:save": "prisma migrate save --experimental",
    "debug": "ndb -r ts-node/register node_modules/.bin/nexus dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio --experimental"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^13.9.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cypress": "^4.3.0",
    "dotenv": "^8.2.0",
    "escape-html": "^1.0.3",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.23.0",
    "nexus-plugin-prisma": "^0.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "husky": "^4.2.3",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.2.0",
    "typescript": "^3.8.3"
  }
}

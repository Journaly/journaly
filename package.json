{
  "name": "journaly",
  "version": "1.0.0",
  "description": "A foreign-language journaling application.",
  "repository": {
    "type": "git",
    "url": "git://github.com/Journaly/journaly.git"
  },
  "author": "Journaly",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Journaly/journaly/issues"
  },
  "main": "index.js",
  "scripts": {
    "build:nexus": "NEXUS_REFLECTION=1 ts-node -O '{\"module\": \"commonjs\"}' --transpile-only nexus/index.ts",
    "build:next": "next build",
    "build": "npm run prisma:generate && npm run build:nexus && npm run build:next",
    "codegen": "graphql-codegen --config codegen.yml",
    "cypress:open": "npx cypress open",
    "dev": "node server/index.js",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,md}'",
    "start": "NODE_ENV=production node server/index.js",
    "svgr": "node scripts/svgr.js",
    "type-check": "tsc",
    "seed": "ts-node -O '{\"module\": \"commonjs\"}' scripts/seed.ts",
    "diff-test": "ts-node -O '{\"module\": \"commonjs\"}' scripts/diff-test.ts",
    "db:snapshot": "pg_dump $DATABASE_URL > snapshot.sql",
    "db:restore": "npm run empty-db && cat snapshot.sql | psql $DATABASE_URL",
    "empty-db": "source .env && psql $DATABASE_URL  -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;'",
    "reseed-db": "npm run empty-db && npm run migrate:up && npm run seed",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:save": "prisma migrate save --experimental",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@apollo/react-ssr": "^4.0.0",
    "@nexus/schema": "^0.19.2",
    "@prisma/client": "^2.12.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/diff": "^4.0.2",
    "@types/escape-html": "^1.0.0",
    "@types/express": "^4.17.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^13.9.0",
    "@types/nodemailer": "^6.4.0",
    "apollo-server-micro": "^2.19.0",
    "aws-sdk": "^2.737.0",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.2.6",
    "cookie": "^0.4.1",
    "date-fns": "^2.11.1",
    "diff": "^4.0.2",
    "dotenv": "^8.2.0",
    "escape-html": "^1.0.3",
    "graphql": "^15.4.0",
    "is-hotkey": "^0.1.6",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "next": "9.3.2",
    "next-i18next": "^6.0.2",
    "nexus-plugin-prisma": "^0.25.0",
    "nprogress": "^0.2.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-hook-form": "^5.7.2",
    "react-toastify": "^6.0.8",
    "slate": "^0.57.1",
    "slate-history": "^0.57.1",
    "slate-react": "^0.57.1",
    "ts-node": "^9.0.0",
    "xss": "^1.0.7"
  },
  "devDependencies": {
    "@prisma/cli": "^2.11.0",
    "@graphql-codegen/cli": "^1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-operations": "1.13.1",
    "@graphql-codegen/typescript-react-apollo": "1.13.1",
    "@svgr/core": "^5.4.0",
    "@svgr/plugin-jsx": "^5.4.0",
    "@svgr/plugin-prettier": "^5.4.0",
    "@svgr/plugin-svgo": "^5.4.0",
    "@types/classnames": "^2.2.10",
    "@types/cookie": "^0.4.0",
    "@types/express": "^4.17.4",
    "@types/node": "^13.7.6",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "cypress": "^4.3.0",
    "colors": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "express": "^4.17.1",
    "husky": "^4.2.3",
    "prettier": "^2.0.1",
    "pretty-quick": "^2.0.1",
    "prompts": "^2.3.2",
    "typescript": "^3.8.3"
  }
}
